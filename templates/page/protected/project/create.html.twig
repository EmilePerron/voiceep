{% extends 'page/protected/base.html.twig' %}

{% block title %}Create a project{% endblock %}

{% block app_body %}
    <div class="card">
        <div class="form-wrapper">
            {% form_theme form 'form/form_errors.html.twig' %}
            {{ form_start(form) }}
                <div class="field full errors">{{ form_errors(form) | trim }}</div>

                <div class="field full">
                    {{ form_errors(form.title) }}
                    {{ form_label(form.title) }}
                    {{ form_widget(form.title) }}
                    {{ form_help(form.title) }}
                </div>

                <div class="field full">
                    {{ form_errors(form.defaultLanguageCode) }}
                    {{ form_label(form.defaultLanguageCode) }}
                    {{ form_widget(form.defaultLanguageCode) }}
                    {{ form_help(form.defaultLanguageCode) }}
                </div>

                <div class="field full">
                    {{ form_errors(form.allowedDomains) }}
                    {{ form_label(form.allowedDomains) }}
                    {{ form_widget(form.allowedDomains) }}
                    {{ form_help(form.allowedDomains) }}
                </div>

                <div class="field full detect-selector">
                    {{ form_errors(form.detectSelector) }}
                    {{ form_label(form.detectSelector) }}
                    {{ form_widget(form.detectSelector) }}
                    {{ form_help(form.detectSelector) }}
                </div>

                <div class="field full">
                    {{ form_widget(form.create) }}
                </div>

            {{ form_end(form) }}
        </div>
    </div>
{% endblock %}
