<div class="modal-title">Sign up for free</div>
<div class="form-wrapper">
    {% form_theme form 'form/form_errors.html.twig' 'form/form_label_raw.html.twig' %}
    {{ form_start(form) }}
        <div class="field full errors">{{ form_errors(form) }}</div>

        <div class="field full">
            {{ form_errors(form.email) }}
            {{ form_label(form.email) }}
            {{ form_widget(form.email) }}
            {{ form_help(form.email) }}
        </div>

        <div class="field full">
            {{ form_errors(form.password) }}
            {{ form_label(form.password) }}
            {{ form_widget(form.password) }}
            {{ form_help(form.password) }}
        </div>

        <div class="field full">
            {{ form_errors(form.terms) }}
            {{ form_widget(form.terms) }}
            {{ form_label(form.terms) }}
            {{ form_help(form.terms) }}
        </div>

        <div class="field full text-center">
            {{ form_widget(form.signup) }}
        </div>

    {{ form_end(form) }}
</div>
